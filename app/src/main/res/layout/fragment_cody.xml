<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainMenuFragment.HomeFragment">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/codyScrollView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/codyAdViewPager"
                android:layout_width="0dp"
                android:layout_height="200dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <HorizontalScrollView
                android:id="@+id/categoryScrollView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_marginEnd="7dp"
                android:layout_marginTop="25dp"
                android:scrollbars="none"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/codyAdViewPager">

                <RadioGroup
                    android:id="@+id/codyCategoryRadioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/radio1"
                        android:layout_width="50dp"
                        android:layout_height="35dp"
                        android:background="@drawable/selector_radio_button"
                        android:button="@null"
                        android:text="전체"
                        android:textColor="@drawable/selector_radio_text"
                        android:textAlignment="center"
                        android:layout_marginEnd="7dp"/>
                    <RadioButton
                        android:id="@+id/radio2"
                        android:layout_width="50dp"
                        android:layout_height="35dp"
                        android:background="@drawable/selector_radio_button"
                        android:button="@null"
                        android:text="상의"
                        android:textColor="@drawable/selector_radio_text"
                        android:textAlignment="center"
                        android:layout_marginEnd="7dp"/>
                    <RadioButton
                        android:id="@+id/radio3"
                        android:layout_width="50dp"
                        android:layout_height="35dp"
                        android:background="@drawable/selector_radio_button"
                        android:button="@null"
                        android:text="하의"
                        android:textColor="@drawable/selector_radio_text"
                        android:textAlignment="center"
                        android:layout_marginEnd="7dp"/>

                    <RadioButton
                        android:id="@+id/radio4"
                        android:layout_width="60dp"
                        android:layout_height="35dp"
                        android:background="@drawable/selector_radio_button"
                        android:button="@null"
                        android:text="원피스"
                        android:textColor="@drawable/selector_radio_text"
                        android:textAlignment="center"
                        android:layout_marginEnd="7dp"/>
                    <RadioButton
                        android:id="@+id/radio5"
                        android:layout_width="60dp"
                        android:layout_height="35dp"
                        android:background="@drawable/selector_radio_button"
                        android:button="@null"
                        android:text="아우터"
                        android:textColor="@drawable/selector_radio_text"
                        android:textAlignment="center"
                        android:layout_marginEnd="7dp"/>
                    <RadioButton
                        android:id="@+id/radio6"
                        android:layout_width="50dp"
                        android:layout_height="35dp"
                        android:background="@drawable/selector_radio_button"
                        android:button="@null"
                        android:text="신발"
                        android:textColor="@drawable/selector_radio_text"
                        android:textAlignment="center"
                        android:layout_marginEnd="7dp"/>
                    <RadioButton
                        android:id="@+id/radio7"
                        android:layout_width="50dp"
                        android:layout_height="35dp"
                        android:background="@drawable/selector_radio_button"
                        android:button="@null"
                        android:text="가방"
                        android:textColor="@drawable/selector_radio_text"
                        android:textAlignment="center"
                        android:layout_marginEnd="7dp"/>


                </RadioGroup>

            </HorizontalScrollView>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/codyCategoryFilterButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="7dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/categoryScrollView">
                <TextView
                    android:id="@+id/filterName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="전체/인기순/스타일(2)"
                    android:textSize="12sp"
                    android:textColor="#606060"/>
                <androidx.constraintlayout.utils.widget.ImageFilterView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_filter"
                    android:layout_marginStart="8dp"/>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/codyRecyclerView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                app:layout_constraintTop_toBottomOf="@id/codyCategoryFilterButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="30dp"
                app:layout_constraintTop_toBottomOf="@id/codyRecyclerView" />




        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>