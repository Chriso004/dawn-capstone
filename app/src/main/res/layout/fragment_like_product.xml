<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainMenuFragment.HomeFragment">

    <RadioGroup
        android:id="@+id/categoryRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginStart="22dp">
        <RadioButton
            android:id="@+id/all"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:background="@drawable/selector_radio_button"
            android:button="@null"
            android:text="전체"
            android:textColor="@drawable/selector_radio_text"
            android:textAlignment="center"
            android:layout_marginEnd="7dp"/>
        <RadioButton
            android:id="@+id/top"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:background="@drawable/selector_radio_button"
            android:button="@null"
            android:text="상의"
            android:textColor="@drawable/selector_radio_text"
            android:textAlignment="center"
            android:layout_marginEnd="7dp"/>
        <RadioButton
            android:id="@+id/bottom"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:background="@drawable/selector_radio_button"
            android:button="@null"
            android:text="바지"
            android:textColor="@drawable/selector_radio_text"
            android:textAlignment="center"
            android:layout_marginEnd="7dp"/>
        <RadioButton
            android:id="@+id/skirt"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:background="@drawable/selector_radio_button"
            android:button="@null"
            android:text="스커트"
            android:textColor="@drawable/selector_radio_text"
            android:textAlignment="center"
            android:layout_marginEnd="7dp"/>
        <RadioButton
            android:id="@+id/shoes"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:background="@drawable/selector_radio_button"
            android:button="@null"
            android:text="신발"
            android:textColor="@drawable/selector_radio_text"
            android:textAlignment="center"
            android:layout_marginEnd="7dp"/>
    </RadioGroup>

    <TextView
        android:id="@+id/likeCountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/categoryRadioGroup"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="13dp"
        android:text="좋아요 7개"
        android:textSize="10sp"
        android:textColor="#7A7A7A"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/sortLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/likeCountTextView"
        app:layout_constraintBottom_toBottomOf="@id/likeCountTextView">

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/switch_button"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="좋아요한 순"
            android:textColor="#606060"
            android:textSize="11sp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="23dp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/likeRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/sortLayout"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>