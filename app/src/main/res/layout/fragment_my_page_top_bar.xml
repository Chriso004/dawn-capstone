<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="94dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".topFragment.MainTopBarFragment">

    <TextView
        android:id="@+id/myPageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="마이페이지"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginStart="22dp"
        android:layout_marginTop="55dp"
        android:layout_marginStart="22dp"/>

    <ImageView
        android:id="@+id/settingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_setting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/myPageTitle"
        app:layout_constraintBottom_toBottomOf="@id/myPageTitle"
        android:layout_marginEnd="25dp"/>

    <ImageView
        android:id="@+id/bellButotn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_bell"
        app:layout_constraintEnd_toStartOf="@id/settingButton"
        app:layout_constraintTop_toTopOf="@id/myPageTitle"
        app:layout_constraintBottom_toBottomOf="@id/myPageTitle"
        android:layout_marginEnd="30dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>