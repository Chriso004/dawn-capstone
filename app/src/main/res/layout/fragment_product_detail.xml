<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProductDetailFragment">

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back_icon"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="@id/toplayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/toplayout"
        android:layout_marginStart="15dp" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/toplayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp">
        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_home"
            android:layout_marginEnd="25dp"/>

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_search2"
            android:layout_marginEnd="25dp"/>

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cart"
            android:tint="@color/titleColor_black"
            android:layout_marginEnd="15dp"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/bottomMenu"
        app:layout_constraintTop_toBottomOf="@id/toplayout"
        android:layout_marginTop="13dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/ImageViewPager"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/brandLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/ImageViewPager"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:gravity="center">

                <androidx.constraintlayout.utils.widget.ImageFilterView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/logo_adidas"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="아디다스"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/titleColor_black"/>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="60dp"
                android:layout_height="30dp"
                app:layout_constraintTop_toTopOf="@id/brandLayout"
                app:layout_constraintBottom_toBottomOf="@id/brandLayout"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="21dp"
                android:background="@drawable/rectangle_line_d3d3d3"
                android:gravity="center">
                <androidx.constraintlayout.utils.widget.ImageFilterView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/like_no"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10.7만"
                    android:textColor="#9D9D9D"
                    android:textSize="10sp"
                    android:layout_marginStart="6dp"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <TextView
                android:id="@+id/productNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="플리스 후디 - 화이트 / HG2073"
                android:textSize="16sp"
                android:textColor="@color/titleColor_black"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/brandLayout"
                app:layout_constraintStart_toStartOf="@id/brandLayout"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/priceLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/productNameTextView"
                app:layout_constraintStart_toStartOf="@id/productNameTextView"
                android:layout_marginTop="5dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/saleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20%"
                    android:textColor="#FF0000"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/priceTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="80,000"
                    android:textSize="18sp"
                    android:textColor="@color/titleColor_black"
                    android:textStyle="bold"
                    android:layout_marginStart="5dp"/>

                <TextView
                    android:id="@+id/originalPriceTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100,000"
                    android:textSize="14sp"
                    android:textColor="#A0A0A0"
                    android:layout_marginStart="5dp"/>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/box"
                app:layout_constraintTop_toTopOf="@id/priceLayout"
                app:layout_constraintBottom_toBottomOf="@id/priceLayout"
                app:layout_constraintEnd_toStartOf="@id/share"
                android:layout_marginEnd="20dp"/>

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/share"
                app:layout_constraintTop_toTopOf="@id/priceLayout"
                app:layout_constraintBottom_toBottomOf="@id/priceLayout"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="24dp"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/getCouponButton"
                android:layout_width="0dp"
                android:layout_height="35dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/priceLayout"
                android:layout_marginTop="14dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/rectangle_line_dawn"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="적용 가능한 할인 쿠폰 받기"
                    android:textSize="13sp"
                    android:textColor="@color/dawnColor"
                    android:textStyle="bold"/>

                <androidx.constraintlayout.utils.widget.ImageFilterView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_download"
                    android:layout_marginStart="6dp"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@id/getCouponButton"
                android:layout_marginTop="20dp"
                android:background="#F5F5F5"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/infoTextLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/line1"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="배송"
                        android:textSize="12sp"
                        android:textColor="@color/titleColor_black"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="전 상품 무료배송"
                        android:textSize="12sp"
                        android:textColor="#505050"
                        android:layout_marginStart="6dp"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="적립"
                        android:textSize="12sp"
                        android:textColor="@color/titleColor_black"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="800원"
                        android:textSize="12sp"
                        android:textColor="#505050"
                        android:layout_marginStart="6dp"/>

                </androidx.appcompat.widget.LinearLayoutCompat>


            </androidx.appcompat.widget.LinearLayoutCompat>

            <View
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@id/infoTextLayout"
                android:layout_marginTop="5dp"
                android:background="#F5F5F5"/>



        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/bottomMenu"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/rectangle_line_d3d3d3"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp">

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/like_no"
                android:layout_gravity="center"/>

        </FrameLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buyButton"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/rectangle_dawn_color"
            android:text="구매하기"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp" />

    </androidx.appcompat.widget.LinearLayoutCompat>



</androidx.constraintlayout.widget.ConstraintLayout>