<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingEnd="20dp">
        <ImageView
            android:id="@+id/brandImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/brand_test_image"/>

        <TextView
            android:id="@+id/brandTitleTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="칼하트"
            android:textSize="11sp"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/brandImage"
            app:layout_constraintStart_toStartOf="@id/brandImage"
            app:layout_constraintEnd_toEndOf="@id/brandImage"
            android:layout_marginTop="2dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    


    

</androidx.constraintlayout.widget.ConstraintLayout>